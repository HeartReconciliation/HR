<%=  render 'layouts/sidenav'%>
<div class="main">
  <%= link_to 'ADD', new_blog_path,class: "btn btn-primary" %>
  <br><br>
    <% @blogs.each do |blog| %>
    <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= blog.title %></h3>
    </div>
    <div class="panel-body">
      <%= blog.description %>
    </div>
  </div>
<%= link_to 'Edit', edit_blog_path(blog),class: "btn btn-info btn-sm" %>
<%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm" %>
<br><br>
    <% end %>
    <%#= will_paginate ,class:"col-md-offset-5"%>
</div>
